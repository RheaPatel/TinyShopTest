@page "/products"
@using TinyShop.DataEntities
@using TinyShop.Store.Services
@inject ProductService ProductService
@inject CartService CartService
@inject IToastService ToastService

<PageTitle>Products - TinyShop</PageTitle>

<h1>Products</h1>

<div class="row mt-4">
    @if (_products == null)
    {
        <p><em>Loading...</em></p>
    }
    else if (!_products.Any())
    {
        <div class="col-12">
            <p>No products available.</p>
        </div>
    }
    else
    {
        @foreach (var product in _products)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@ProductService.GetProductImageUrl(product)" 
                         class="card-img-top product-image" 
                         alt="@product.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price">$@product.Price.ToString("F2")</span>
                                <button class="btn btn-primary" 
                                        @onclick="() => AddToCart(product)" 
                                        disabled="@(!product.InStock)">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                            @if (!product.InStock)
                            {
                                <div class="text-danger mt-2">Out of stock</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private List<Product>? _products;
    
    protected override void OnInitialized()
    {
        _products = ProductService.GetAllProducts();
    }
    
    private void AddToCart(Product product)
    {
        CartService.AddToCart(product);
        ToastService.ShowSuccess($"{product.Name} added to cart!");
    }
}