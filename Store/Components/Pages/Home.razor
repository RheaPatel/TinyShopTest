@page "/"
@inject NavigationManager NavigationManager

<PageTitle>TinyShop - Welcome</PageTitle>

<div class="text-center py-5">
    <h1>Welcome to TinyShop!</h1>

    <p class="lead my-4">
        Explore our collection of high-quality products at affordable prices.
    </p>

    <button class="btn btn-primary btn-lg" @onclick="NavigateToProducts">
        Start Shopping
    </button>
</div>

@code {
    protected override void OnInitialized()
    {
        // Uncomment this line to automatically redirect to products page
        // NavigateToProducts();
    }

    private void NavigateToProducts()
    {
        NavigationManager.NavigateTo("/products");
    }
}
