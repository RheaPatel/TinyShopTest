@page "/"

<PageTitle>Home - TinyShop</PageTitle>

<div class="text-center">
    <h1 class="display-4">Welcome to TinyShop</h1>
    <p class="lead">Your one-stop shop for amazing products.</p>
    <a href="/products" class="btn btn-primary btn-lg mt-3">
        <i class="bi bi-cart4"></i> Start Shopping
    </a>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card mb-4 h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-truck"></i> Fast Shipping</h5>
                <p class="card-text">Get your orders quickly with our expedited shipping options.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-shield-check"></i> Quality Guarantee</h5>
                <p class="card-text">All our products are guaranteed for quality and satisfaction.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-headset"></i> 24/7 Support</h5>
                <p class="card-text">Our customer support team is available around the clock.</p>
            </div>
        </div>
    </div>
</div>